# Arch no.1: Unidirect LSTM Models Section (DNA)  #
# ----------------------------------------------- #

arch_1_onehot_conv_lstm_holdout:
	python3 main.py \
	--validation \
	--sequence_type dna \
    --path_source_data ./data/bins_translated \
    --load_network ModelConvUnidirect \
    --network_parameters models/ModelConvUnidirect.json \
    --num_epochs 100 \
    --batch_size 16 \
    --lr 1e-4 \
    --onehot_flag

